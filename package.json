{
  "name": "parallax",
  "version": "1.0.0",
  "description": "Here’s the full and **most up‑to‑date `README.md`** for your **PARALLAX** project — the definitive entry point for any human or AI coding agent to understand, set up, and build your system.",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "tsc --project tsconfig.test.json && node tmp/test-dist/tests/handshake.test.js",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --external:better-sqlite3",
    "build:scripts": "tsc --project scripts/tsconfig.json",
    "start": "npm run build && node dist/index.js",
    "migrate": "ts-node scripts/migrate.ts",
    "bootstrap": "npm run build:scripts --silent && node scripts/dist/cli/bootstrap.js",
    "health-check": "npm run build:scripts --silent && node scripts/dist/cli/health-check.js",
    "orchestrate:start": "npm run build:scripts --silent && node scripts/dist/cli/orchestrate.js --action start",
    "orchestrate:stop": "npm run build:scripts --silent && node scripts/dist/cli/orchestrate.js --action stop"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HassanAliMAli/Parallax.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HassanAliMAli/Parallax/issues"
  },
  "homepage": "https://github.com/HassanAliMAli/Parallax#readme",
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "clipboardy": "^5.0.0",
    "fastify": "^5.6.1",
    "ora": "^5.4.1",
    "pino": "^10.1.0",
    "playwright": "^1.56.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/chalk": "^0.4.31",
    "@types/node": "^24.9.1",
    "esbuild": "^0.25.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
